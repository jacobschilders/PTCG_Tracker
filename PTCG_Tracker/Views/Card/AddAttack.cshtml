@model PTCG_Tracker.Models.CardModels.CardAttack
@{
    ViewBag.Title = "AddAttack";
}

<br />
<br />
<br />
<br />
<br />
<br />
<div class="card text-white bg-dark mb-3 d-inline-block">
    <div class="card-header">
        Card/AddAttack
    </div>
    <div class="card-body">
        <h4 class="card-title">Add Attack</h4>
        <p class="card-text">Select an "Attack" to add to this "Card".</p>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Card Attacks</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CardId)

        <div class="form-group">
            @Html.LabelFor(model => model.AttackId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AttackId", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AttackId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
